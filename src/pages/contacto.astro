---
import Layout from "../layouts/layout.astro";
import HeroSection from "../components/heroSection.astro";
import { Icon } from "astro-icon/components";
import contactoBg from "../images/trabajos/acs.jpg";
---

<Layout
  title="Contacto - Efical SpA"
  description="Contáctanos para más información y soporte."
>
  <main>
    <HeroSection
      title="Contáctanos"
      subtitle="Estamos aquí para ayudarte"
      backgroundImage={contactoBg}
    />

    <section class="py-20 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <section class="contact-container max-w-3xl mx-auto">
        <div class="bg-gray-50 rounded-2xl shadow-lg p-8">
          <h2 class="text-2xl font-semibold text-blue-950 mb-8">
            Información de Contacto
          </h2>

          <div class="space-y-6">
            <div class="flex items-start space-x-4">
              <Icon name="mdi:map-marker" class="text-green-600 w-6 h-6" />
              <div>
                <h3 class="font-semibold text-blue-900 mb-1">Dirección</h3>
                <p>Calle San Juan Bosco #430, Concepción, Chile.</p>
              </div>
            </div>

            <div class="flex items-center space-x-4">
              <Icon name="mdi:phone" class="text-green-600 w-6 h-6" />
              <div>
                <h3 class="font-semibold text-blue-900 mb-1">Teléfono</h3>
                <a
                  href="tel:+56981988494"
                  class="text-blue-700 hover:underline"
                >
                  (+56) 9 8198 8494
                </a>
              </div>
            </div>

            <div class="flex items-center space-x-4">
              <Icon name="mdi:email" class="text-green-600 w-6 h-6" />
              <div>
                <h3 class="font-semibold text-blue-900 mb-1">Email</h3>
                <a
                  href="mailto:efical.climatizacion@gmail.com"
                  class="text-blue-700 hover:underline"
                >
                  efical.climatizacion@gmail.com
                </a>
              </div>
            </div>

            <div class="flex items-center space-x-4">
              <Icon name="mdi:clock-outline" class="text-green-600 w-6 h-6" />
              <div>
                <h3 class="font-semibold text-blue-900 mb-1">
                  Horario de Atención
                </h3>
                <p>Lunes a Viernes: 9:00 - 18:00</p>
              </div>
            </div>
          </div>
        </div>
      </section>
    </section>
  </main>
</Layout>
