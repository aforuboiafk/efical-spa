---
import Layout from "../layouts/layout.astro";
import { Image } from "astro:assets";
import logo from "../images/miscelaneos/logo.png";
import heroImage from "../images/miscelaneos/hero.jpg"; // Add this import
---

<section
  class="relative h-[30rem] lg:h-[40rem] flex items-center justify-center text-white"
>
  <div class="absolute inset-0 bg-blue-950/70 z-0"></div>

  <div
    class="absolute inset-0 bg-cover bg-center z-[-1]"
    style={`background-image: url(${heroImage.src})`}
  >
  </div>

  <div class="relative z-10 container mx-auto text-center px-4">
    <Image
      src={logo}
      alt="EFICAL SpA Logo"
      class="h-28 w-auto mx-auto mb-6 md:h-32 lg:h-40"
    />
    <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4 md:mb-6">
      <span class="text-[hsl(82.35deg_42.15%_52.55%)]">EXPERTOS</span> EN EFICIENCIA
      TÉRMICA
    </h1>
    <p class="text-lg md:text-xl font-light mb-8 md:mb-10 text-gray-200">
      Compromiso con la excelencia y calidad en cada proyecto.
    </p>
    <a
      href="/contacto"
      class="inline-block bg-[hsl(82.35deg_42.15%_52.55%)] text-dark-blue px-8 py-3 rounded-md font-semibold transition-colors duration-200 hover:opacity-80 hover:shadow-lg"
    >
      Contáctanos
    </a>
  </div>

  <div class="absolute bottom-0 left-0 w-full z-20 text-gray-50">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 1440 120"
      class="w-full h-auto"
      preserveAspectRatio="none"
    >
      <path
        fill="currentColor"
        d="M0,0L360,24L720,96L1080,108L1440,60L1440,120L1080,120L720,120L360,120L0,120Z"
      ></path>
    </svg>
  </div>
</section>
