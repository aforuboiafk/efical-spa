---
import { Image } from "astro:assets";
import logo from "../images/miscelaneos/logo.png";

const navItems = [
  { path: "/", label: "Inicio" },
  { path: "/servicios", label: "Servicios" },
  { path: "/trabajos", label: "Trabajos" },
  { path: "/equipo", label: "Equipo" },
  { path: "/contacto", label: "Contacto" },
];

// Custom color class using HSL
const customGreen = "hsl(82.35deg 42.15% 52.55%)";
---

<header class="bg-blue-950 sticky top-0 z-50 shadow-md">
  <nav
    class="mx-auto flex max-w-7xl items-center justify-between px-6 py-4 md:px-8"
    role="navigation"
  >
    <a href="/" class="flex items-center gap-3 md:flex-1">
      <Image src={logo} alt="Logo de Efical" width={150} class="h-16 w-auto" />
      <span class="text-xl font-extralighty text-white">Efical SpA</span>
    </a>

    <!-- Desktop Navigation -->
    <div class="hidden md:flex md:gap-x-10">
      {
        navItems.map(({ path, label }) => (
          <a
            href={path}
            class="group relative text-base font-light text-white transition-colors duration-200 hover:text-[hsl(82.35deg_42.15%_52.55%)]"
          >
            {label}
            <span class="absolute inset-x-0 bottom-0 h-0.5 origin-left scale-x-0 transform bg-[hsl(82.35deg_42.15%_52.55%)] transition-transform duration-300 ease-out group-hover:scale-x-100" />
          </a>
        ))
      }
    </div>

    <!-- Mobile Menu Button -->
    <div class="md:hidden">
      <button
        id="mobile-menu-button"
        type="button"
        aria-label="Abrir menú"
        aria-controls="mobile-menu"
        aria-expanded="false"
        class="flex items-center justify-center rounded-md p-2.5 text-white focus:outline-none focus:ring-2 focus:ring-[hsl(82.35deg_42.15%_52.55%)]"
      >
        <svg
          id="menu-icon"
          class="h-6 w-6"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          viewBox="0 0 24 24"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile Navigation -->
  <div
    id="mobile-menu"
    class="hidden md:hidden fixed inset-x-0 top-[6rem] bg-blue-950/90 shadow-lg backdrop-blur-md transition-all duration-300"
  >
    <div class="space-y-2 px-4 py-4">
      {
        navItems.map(({ path, label }) => (
          <a
            href={path}
            class="block rounded-md px-4 py-2 text-base font-light text-white hover:bg-[hsl(82.35deg_42.15%_52.55%)] hover:text-blue-950 transition-colors duration-200"
          >
            {label}
          </a>
        ))
      }
    </div>
  </div>
</header>

<script>
  const menuButton = document.getElementById("mobile-menu-button");
  const menuIcon = document.getElementById("menu-icon");
  const mobileMenu = document.getElementById("mobile-menu");

  menuButton?.addEventListener("click", () => {
    const expanded = menuButton.getAttribute("aria-expanded") === "true";
    menuButton.setAttribute("aria-expanded", String(!expanded));
    mobileMenu?.classList.toggle("hidden"); // Alternar icono (hamburguesa ↔ cruz)

    menuIcon.innerHTML = expanded
      ? `<path d="M4 6h16M4 12h16M4 18h16" />`
      : `<path d="M6 18L18 6M6 6l12 12" />`;
  });
</script>
