---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  subtitle: string;
  backgroundImage: ImageMetadata;
  bgColor?: string; // Add optional background color prop
}

const {
  title,
  subtitle,
  backgroundImage,
  bgColor = "bg-blue-950",
} = Astro.props;
---

<section class="relative h-[30rem] flex items-center justify-center text-white">
  <!-- Imagen de fondo -->
  <div class="absolute inset-0 z-0">
    <Image
      src={backgroundImage}
      alt="Background image"
      class="w-full h-full object-cover"
      quality={100}
    />
    <!-- Capa oscura sobre la imagen -->
    <div class="absolute inset-0 bg-blue-950/70 z-0"></div>
  </div>

  <!-- Wave SVG -->
  <div class="absolute bottom-0 left-0 w-full z-[1] text-gray-50">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 1440 120"
      class="w-full h-[60px]"
      preserveAspectRatio="none"
    >
      <path
        fill="currentColor"
        fill-opacity="1"
        d="M0,0L360,24L720,96L1080,108L1440,60L1440,120L1080,120L720,120L360,120L0,120Z"
      ></path>
    </svg>
  </div>

  <!-- Contenido -->
  <div class="hero-content max-w-4xl px-5 z-10 text-center">
    <h1
      class="text-4xl md:text-5xl font-extrabold mb-4 leading-tight animate-fade-in-up"
    >
      {title}
    </h1>
    <p
      class="text-lg md:text-xl font-light mb-8 animate-fade-in-up animation-delay-500"
    >
      {subtitle}
    </p>

    <div
      class="flex justify-center space-x-2 animate-fade-in-up animation-delay-200"
    >
      <a
        href="/contacto"
        class="bg-[hsl(82.35deg_42.15%_52.55%)] text-white px-8 py-3 rounded-md hover:opacity-90 transition-opacity"
      >
        Cotizar ahora
      </a>
    </div>
  </div>
</section>

<style>
  .animation-delay-200 {
    animation-delay: 0.2s;
  }
  .animation-delay-500 {
    animation-delay: 0.5s;
  }

  .animate-fade-in-up {
    animation-fill-mode: forwards;
  }
</style>
