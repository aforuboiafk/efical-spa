---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

interface Props {
  icon: string;
  title: string;
  description: string;
  details: string[];
  image: ImageMetadata;
}

const { icon, title, description, details, image } = Astro.props;
---

<div
  class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow"
>
  <div class="relative h-48 overflow-hidden">
    <Image
      src={image}
      alt={`Imagen de ${title}`}
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-blue-950/30"></div>
  </div>

  <div class="relative px-8 pt-12 pb-8">
    <div class="absolute -top-8 left-1/2 -translate-x-1/2">
      <div
        class="w-16 h-16 bg-[hsl(82.35deg_42.15%_52.55%)] rounded-full flex items-center justify-center shadow-lg"
      >
        <Icon name={icon} class="w-8 h-8 text-white" />
      </div>
    </div>

    <h3 class="text-2xl font-bold text-blue-950 text-center mb-4">{title}</h3>
    <p class="text-gray-600 mb-6 text-center">{description}</p>

    <ul class="space-y-3">
      {
        details.map((detail) => (
          <li class="flex items-start">
            <svg
              class="w-5 h-5 text-[hsl(82.35deg_42.15%_52.55%)] mr-2 flex-shrink-0"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                clip-rule="evenodd"
              />
            </svg>
            <span class="text-gray-700">{detail}</span>
          </li>
        ))
      }
    </ul>
  </div>
</div>
